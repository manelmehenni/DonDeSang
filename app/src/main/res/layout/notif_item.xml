<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:alpha="0.9"
    android:background="@drawable/prog_text"
    >

    <TextView
        android:id="@+id/contenuNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingStart="5dp"
        android:layout_marginEnd="@dimen/ic_width"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:layout_marginRight="@dimen/ic_width" />

    <ImageButton
        android:id="@+id/supprimer_notif"
        android:layout_width="@dimen/ic_width"
        android:layout_height="@dimen/ic_height"
        android:src="@drawable/ic_close_black_24dp"
        android:contentDescription="TODO"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/type_demande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/contenuNotif"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp">

        <Button
            android:id="@+id/accepter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#40A497"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
            android:text="Accepter"/>

        <Button
            android:id="@+id/refuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:background="#9D0D0D"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text"
            android:text="Refuser"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

</RelativeLayout>